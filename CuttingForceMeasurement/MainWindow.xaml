<Window x:Class="CuttingForceMeasurement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:CuttingForceMeasurement"
        mc:Ignorable="d"
        Title="Измерение усилия на резце"
        Height="480" Width="780"
        MinWidth="780" MinHeight="480"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}" SizeToContent="Width" Icon="Images/baseline_play_for_work_darkpurple_48dp.png"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Navigation Bar -->
        <StackPanel
            x:Name="NavigationBar"
            MouseLeftButtonDown="NavigationBar_MouseLeftButtonDown"
            Orientation="Horizontal"
            Background="{DynamicResource PrimaryHueMidBrush}"
            Grid.Row="0" Margin="0,0,0,47" Grid.RowSpan="2"/>

        <TextBlock
                Grid.Row="0"
                Text="Измерение усилия на резце" 
                Foreground="{DynamicResource MaterialDesignPaper}"
                FontSize="16"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Margin="287,7,286,5"
                />

        <Button 
                x:Name="Settings"
            Grid.Row="0"
                HorizontalAlignment="Right"
                Margin="0 0 78 0"
                Padding="0"
                Style="{DynamicResource MaterialDesignToolButton}">
            <materialDesign:PackIcon
                Width="24" Height="24"
                Kind="Settings"
                Foreground="{DynamicResource MaterialDesignPaper}"/>
        </Button>
        <Button
            x:Name="MinimizeWindow"
                Grid.Row="0"
                HorizontalAlignment="Right"
                Margin="0 0 44 0"
                Padding="0"
                Style="{DynamicResource MaterialDesignToolButton}"
                Click="MinimizeWindow_Click">
            <materialDesign:PackIcon
                Width="24" Height="24"
                Kind="WindowMinimize"
                Foreground="{DynamicResource MaterialDesignPaper}"/>
        </Button>
        <Button
                x:Name="Exit"
                Grid.Row="0"
                HorizontalAlignment="Right"
                Margin="0 0 10 0"
                Padding="0"
                Style="{DynamicResource MaterialDesignToolButton}"
                Click="Exit_Click">
            <materialDesign:PackIcon
                Width="24" Height="24"
                Kind="Close"
                Foreground="{DynamicResource MaterialDesignPaper}"/>
        </Button>
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="1" Margin="0,1,0,18" Grid.RowSpan="3"
            
            >
            <materialDesign:PackIcon
                Width="32" Height="32"
                VerticalAlignment="Center"
                Kind="AccountCircle"
                Foreground="Gray"/>
            
            <TextBlock
                FontSize="16"
                Foreground="Black"
                VerticalAlignment="Center"
                Margin="10 0 10 0"
                >
                Выполнил
            </TextBlock>
            <TextBox
                x:Name="GroupName"
                Width="124" Height="32"
                Style="{DynamicResource MaterialDesignTextBox}"
                FontSize="16"
                Foreground="Black"
                materialDesign:HintAssist.Hint="студент группы"
                />
            <TextBox
                x:Name="StudentName"
                Width="124" Height="32"
                Style="{DynamicResource MaterialDesignTextBox}"
                Margin="10 0 0 0"
                FontSize="16"
                Foreground="Black"
                materialDesign:HintAssist.Hint="Волков В."
                />

            <materialDesign:PackIcon
                Width="32" Height="32"
                VerticalAlignment="Center"
                Kind="Bug"
                Foreground="Gray"/>
            <ComboBox
                x:Name="ComPort"
                Style="{StaticResource MaterialDesignComboBox}"
                Height="32" Width="128"
                FontSize="16"
                materialDesign:HintAssist.Hint="COM Port"
                ToolTip="Выберите COM к которому подключен прибор"
                >
                <ComboBoxItem IsSelected="True">COM1 Keyboard</ComboBoxItem>
                <ComboBoxItem>COM7 Arduino UNO</ComboBoxItem>
                <ComboBoxItem>COM8 Unknown</ComboBoxItem>
            </ComboBox>
            <TextBlock
                FontSize="16"
                Foreground="Black"
                VerticalAlignment="Center"
                Margin="20 0 0 0"
                >
                Демо режим
            </TextBlock>
            <ToggleButton
                x:Name="DemoMode"
                Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                Margin="10 0 0 0"
                IsChecked="True" />
        </StackPanel>
        <materialDesign:DialogHost
            x:Name="ExitDialog"
            Grid.Row="2"
            DialogClosing="DialogHost_DialogClosing"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" Margin="390,2,390,18" Grid.RowSpan="2">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="16">
                    <TextBlock>Вы действительно все сохранили и желаете закрыть приложение?</TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsDefault="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                            <Button.CommandParameter>
                                <system:Boolean>True</system:Boolean>
                            </Button.CommandParameter>
                            Согласен
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        IsCancel="True"
                                        Margin="0 8 8 0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                            <Button.CommandParameter>
                                <system:Boolean>False</system:Boolean>
                            </Button.CommandParameter>
                            Нет
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</Window>
